extends ./layout.jade
block title
	| Repositories
block content
	div(class="nav-bar")
		a(class="mdl-button mdl-button--icon mdl-button--colored  mdl-button--fab mdl-js-button mdl-js-ripple-effect", href="/")
			i(class="material-icons")="arrow_back"
	unless repos == null
		section(class="section--center mdl-grid")
			each val in repos
				div(class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--2dp")
					div(class="mdl-card__title mdl-card--border")
						h2(class="mdl-card__title-text")=val.name
					div(class="mdl-card__menu")
						a(class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect", href=val.html_url, title="Github", target="_blank")
							i(class="mdi mdi-github-circle")
						a(class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect", href="/repos/#{val.name}", title="Edit")
							i(class="material-icons")="edit"
					div(class="mdl-color-text--grey-600 mdl-card__supporting-text")
						div(class="mdl-card__subtitle-text")=val.description

	else
		section(class="section--center mdl-grid")
			div(class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--2dp")
				div(class="mdl-card__title")
					h2(class="mdl-card__title-text") No repositories found.
